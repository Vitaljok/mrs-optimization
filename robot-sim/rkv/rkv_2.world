
resolution 0.02
interval_sim 100

window (
  size [ 600 600 ]
  scale 12
  center [ 0  0 ]
  rotate [ 0  0 ]
  			
  show_data 1
  show_flags 1
  show_footprints 1
)

#map
model (
  color "gray30"

  #size [40.000 34.000 0.800]
  size [60.000 60.000 0.800]
  pose [0 0 0 0]
  bitmap "bitmaps/simple_room.png"

  boundary 0

  gui_nose 0
  gui_grid 0
  gui_move 0
  gui_outline 0
  gripper_return 0
  fiducial_return 0
  ranger_return 1
)

#objects
define obj_green model (
  size [0.2 0.2 0.7]
  color "green"
)

define obj_yellow model (
  size [0.3 0.3 1.5]
  color "yellow"
)

