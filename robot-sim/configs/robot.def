define wheel model (
  size [ 0.2 0.2 0.3]
  color_rgba [ 0.4 0.1 0.0 1]
)

define unloader_shape  model (
  color "dark green"
  
  block (
    points 6
    point[0] [ 0.0  0.0 ]
    point[1] [ 3.0  0.0 ]
    point[2] [ 3.0  1.0 ]
    point[3] [ 2.0  2.0 ]
    point[4] [ 1.0  2.0 ]
    point[5] [ 0.0  1.0 ]
    z [0 1]
  )
)

define unloader unloader_shape (     
  size [ 1.1 0.7 0.2 ]
  pose [ -0.4 0 0.5 -90 ]     
  
  unloader_shape ( 
    size [ 0.9 0.5 0.1 ]
    pose [ 0 -0.1 0.0 0 ] 
  )
)

define rng_sensor sensor (
  fov 45
  range [ 0 2 ]
)

# cropper
define cropper fiducial (
  range_max 1.7
  fov 360
  pose [ -0.5 0 0 0]
  ignore_zloc 1
  fiducial_key 10
  alwayson 0
  
  model (
    size [ 0.3 1.3 0.1 ]
    pose [ 1.3 0 0 0 ]
    color "dark green"
  )    
)

# loader
define loader fiducial (
  range_max 2
  fov 60
  pose [ -0.5 0 0 0]
  ignore_zloc 1
  fiducial_key 20
  alwayson 0
  
  model (
    size [ 0.3 1.3 0.1 ]
    pose [ 1.3 0 0 0 ]
    color "yellow3" 
  )   
)

# dumper
define dumper model (
  color "yellow3"
  
  size [ 1.3 1.2 0.1 ]
  pose [ -0.3 0 0.5 0 ]
  
  model (
    color "yellow3"
    size [ 0.1 1.2 0.1 ]
    pose [ 0.6 0 0.0 0 ]
  )
)
  
define robot_base position (
  
  # watts 5000
  # kjoules 100 
  # kjoules_capacity 400
  size [ 1.3 1.3 0.10]
  color_rgba [ 0.8 0.3 0.0 0.2]
  wheel ( pose [ -0.65 -0.65 -0.1 45 ] )
  wheel ( pose [ -0.65  0.65 -0.1 45 ] )
  wheel ( pose [  0.65  0.65 -0.1 45 ] )
  wheel ( pose [  0.65 -0.65 -0.1 45 ] )
  
  velocity_bounds [ -5.0 10.0 0 0 0 0 -90.0 90.0 ]
  
  localization_origin [ 0 0 0 0 ]
  
  # fake body
  model (
    color_rgba [ 0.8 0.3 0.0 1]
    size [ 1.3 1.3 0.5]
  )
    
  # fake head  
  model (
    size [ 0.7 0.2 0.1]
    pose [ 0.5 0 0.5 -90 ]
    
    color_rgba [ 0.45 0.2 0.0 1]
    
    block (
      points 3
      point[0] [ 0.0 0.0 ]
      point[1] [ 1.0 0.0 ]
      point[2] [ 0.5 1.0 ]
      z [0 1]
    )   
  ) 
  
  # camera
  blobfinder (
    alwayson 0
    image [ 160 120 ]
    image_show 0
    range 12.0
    fov 120
    pose [ 0.5 0 0.5 0 ]
    colors ["green" "yellow" ]
  )    
  
  # laser ranger
  ranger (
    alwayson 0
    
    sensor (
      range [ 0 4 ]
      fov 360
      samples 45
    )    
  )
  
  #radar
  # fiducial (
    # fov 360
    
    # range_max 200
    # ignore_zloc 1
    # fiducial_key 1
    # alwayson 1
  # )
)

