#robot
define robot position (
  stack_children 1
  size [0.5 0.5 0.3]
  
  block (
    points 6
    point[0] [-1.0 -1.0 ]
    point[1] [ 0.3 -1.0 ]
    point[2] [ 1.0 -0.25]
    point[3] [ 1.0  0.25]
    point[4] [ 0.3  1.0 ]
    point[5] [-1.0  1.0 ]
    z [0 1]
  )
  
  ranger (
    
    pose [0.1 0 -0.15 0]
    size [0.1 0.4 0.1]
    block (
      points 3
      point[0] [0.0 0.0]
      point[1] [1.0 0.5]
      point[2] [0.0 1.0]
      z [0 1]
    )
    
    sensor (
      range [0.0 8.0]
      fov 120.0
      samples 120
    )
  )
  
  blobfinder (
    colors_count 1
    colors [ "orange" ]
    image [320 240]
    range 20.0
    fov 120   
  )
)

