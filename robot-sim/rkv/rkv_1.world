#robot
define robot position (
  size [0.5 0.5 0.3]
  
  block (
    points 6
    point[0] [-1.0 -1.0 ]
    point[1] [ 0.3 -1.0 ]
    point[2] [ 1.0 -0.25]
    point[3] [ 1.0  0.25]
    point[4] [ 0.3  1.0 ]
    point[5] [-1.0  1.0 ]
    z [0 1]
  )
  
  ranger (
    
    pose [0.1 0 0 0]
    size [0.1 0.4 0.1]
    block (
      points 3
      point[0] [0.0 0.0]
      point[1] [1.0 0.5]
      point[2] [0.0 1.0]
      z [0 1]
    )
    
    sensor (
      range [0.0 8.0]
      fov 120.0
      samples 120
    )
  )
  
  blobfinder (
    colors_count 2
    colors [ "green" "yellow" ]
    image [320 240]
    range 8.0
    fov 120   
  )
)

robot (
  pose [-8.0 -8.0 0 65]
  name "rob1"
)

robot (
  pose [8.0 8.0 0 -25]
  name "rob2"
)

robot (
  pose [6.0 -4.0 0 -90]
  name "rob3"
)

